---
const resources_componentes_ui = [
    {"icon":"","name":"HeroUI","description":"Biblioteca de componentes","url":"https://www.heroui.com/"},
    {"icon":"https://preline.co/favicon.ico","name":"Preline UI","description":"Componentes para Tailwind","url":"https://preline.co/"},
    {"icon":"https://magicui.design/favicon.ico","name":"Magic UI","description":"UI para ingenieros de diseño","url":"https://magicui.design/"},
    {"icon":"https://uiverse.io/favicon-32x32.png","name":"Universe IO","description":"Componentes de UI colaborativos","url":"https://uiverse.io/"},
    {"icon":"https://ui.shadcn.com/favicon-16x16.png","name":"UI Shadcn","description":"Componentes gráficos y charts","url":"https://ui.shadcn.com/"}
];
---
{resources_componentes_ui.map(tool => (
    <a href={tool.url} target="_blank" rel="noopener noreferrer"
        class="group flex flex-col border-2 rounded-xl border-palette-700 bg-palette-900 p-4 hover:border-palette-500 hover:scale-105 w-72 h-42"
    >
        <div
            class="flex justify-between items-center me-2"
        >
            <h6 class="text-palette-300 font-bold flex justify-center items-center text-center me-2 group-hover:text-palette-200"
            >
                <span class="mr-2"><img src={tool.icon} class="w-7" alt=""></span>{tool.name}
            </h6>
            <span class="icon-[streamline-sharp--link-share-2] text-palette-300"></span>
        </div>
        <div class="mt-5">
            <p class="text-palette-200 group-hp">{tool.description}</p>
        </div>
    </a>
))}